@model List<CTS.MVC.ExpenseApp.Models.ClientViewModel>


<div class="table">
    <br />
    <table class="centerContent">

        @foreach (CTS.MVC.ExpenseApp.Models.ClientViewModel project in Model)
        {
            <tr class="info">
                <td><a id="projectLink" data-ProjectId="@project.ProjectId" data-ProjectName="@project.ProjectName">@project.ProjectName</a></td>
                <td>
                    <a id="btnDeleteProject"  data-ProjectId="@project.ProjectId" data-ProjectName="@project.ProjectName"><i class="icon-trash"></i></a>
                </td>
            </tr>
        
        }

        <tr>
            <td></td>

        </tr>
    </table>
    <input id="txtProjectID" type="hidden" />
    <label>Project Name  </label>
    <div class="input-append">

        <input id="txtProjectName" name="txtProjectName" type="text" value="" placeholder="Project Name ..." />

        <button class="btn btn-success" id="btnAddEditProject">Add</button>
        <button class="btn btn-warning" id="btnCancelProject">Cancel</button>

    </div>

</div>

<script type="text/javascript">

    // this JS handels all the Project table functions


</script>
